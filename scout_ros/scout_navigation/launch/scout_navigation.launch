<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find scout_navigation)/maps/map_outdoor.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <arg name="robot_name"  default="scout"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" output="screen">
  </node>

  <group ns = "$(arg robot_name)">
    <remap from="map" to="/map"/>
    
    <!-- AMCL -->
    <include file="$(find scout_navigation)/launch/amcl.launch">
      <arg name="odom_frame_id" value="$(arg robot_name)/odom"/>
      <arg name="base_frame_id" value="$(arg robot_name)/base_footprint"/>
      <arg name="scan_topic" value="scan"/>
		  <arg name="use_map_topic" value="true" />
      <arg name="global_frame_id" value="/map"/>
    </include>

    <!-- move_base -->
    <include file="$(find scout_navigation)/launch/move_base.launch">
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find scout_navigation)/rviz/visualize_scout.rviz"/>
  </group>

</launch>
