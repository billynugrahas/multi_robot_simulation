<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find scout_aliengo_gazebo_navigation)/maps/map_outdoor.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <arg name="robot_name_1"  default="scout"/>
  <arg name="robot_name_2"  default="aliengo"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)" output="screen">
  </node>

  <group ns = "$(arg robot_name_1)">
    <remap from="map" to="/map"/>
    
    <!-- AMCL -->
    <include file="$(find scout_navigation)/launch/amcl.launch">
      <arg name="odom_frame_id" value="$(arg robot_name_1)/odom"/>
      <arg name="base_frame_id" value="$(arg robot_name_1)/base_footprint"/>
      <arg name="scan_topic" value="scan"/>
		  <arg name="use_map_topic" value="true" />
      <arg name="global_frame_id" value="/map"/>
    </include>

    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <rosparam file="$(find scout_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find scout_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find scout_navigation)/param/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find scout_navigation)/param/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find scout_navigation)/param/move_base_params.yaml" command="load" />
      <rosparam file="$(find scout_navigation)/param/base_local_planner_params.yaml" command="load" />

      <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    </node>
  </group>

  <group ns = "$(arg robot_name_2)">
    <remap from="map" to="/map"/>
    
    <!-- AMCL -->
    <include file="$(find scout_navigation)/launch/aliengo/amcl.launch">
      <arg name="odom_frame_id" value="$(arg robot_name_2)/odom"/>
      <arg name="base_frame_id" value="$(arg robot_name_2)/base_footprint"/>
      <arg name="scan_topic" value="scan"/>
		  <arg name="use_map_topic" value="true" />
      <arg name="global_frame_id" value="/map"/>
    </include>

    <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <rosparam file="$(find aliengo_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find aliengo_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find aliengo_navigation)/param/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find aliengo_navigation)/param/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find aliengo_navigation)/param/move_base_params.yaml" command="load" />
      <rosparam file="$(find aliengo_navigation)/param/base_local_planner_params.yaml" command="load" />

      <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    </node>
  </group>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find scout_aliengo_gazebo_navigation)/rviz/multi_robot.rviz"/>
  </group>

</launch>
